<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="CoralPOS.Interfaces" namespace="CoralPOS.Interfaces.Model">
  <class name="LoginModel" 
         table="userinfo" 
         lazy="false"
  >
    <id name="Username" type="String" unsaved-value="null">
      <column name="Username" length="50" sql-type="varchar" not-null="true" unique="true" />
      <generator class="assigned" />
    </id>
    <property name="Password" type="String">
      <column name="Password" length="50" sql-type="varchar" not-null="false"/>
    </property>
    <property 
      name="Suspended" 
      type="Int32" 
      column="SUSPENDED"
      
      >      
    </property>
    <property 
      name="Deleted" 
      type="Int32" 
      column="DELETED"
      
      >      
    </property>
    <bag name="Roles" table="userrole" lazy="false">
      <key column="userid" />
      <many-to-many class="CoralPOS.Interfaces.Model.RoleModel, CoralPOS.Interfaces" column="roleid" />
    </bag>
    <many-to-one
  name="EmployeeInfo"
class="EmployeeInfo"
lazy="false"
	>
      <column name="EMPLOYEE_ID" />
      <column name="DEPARTMENT_ID" />
    </many-to-one>
  </class>
</hibernate-mapping>
